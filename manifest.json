{
  "manifest_version": 2,
  "name": "ChatGPT to Google Sheets",
  "description": "Guarda los prompts y respuestas en Google Sheets.",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "https://hooks.zapier.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["content.js"],
    "persistent": false
  },
  "icons": {
    "48": "icon.png"
  }
}